#!/bin/bash

source $HOME/bin/menu/lib/menu_helpers.sh

cd /home/sanford/

file=1
while [ "$file" ]; do
    fileList=$(find $(pwd) -maxdepth 1 -exec basename {} \;)
    file=$(echo "$fileList" | $MenuCmd --prompt "$(pwd) > ")

    if [ -e "$file" ]; then
        owd=$(pwd)
        if [ -d "$file" ]; then
            cd "$file"
        else [ -f "$file" ]
            if which xdg-open &> /dev/null; then
                exec xdg-open "$owd/$file" & disown
                unset file
            fi
        fi
    fi
done
