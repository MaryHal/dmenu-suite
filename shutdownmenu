#!/bin/bash

source $HOME/bin/menu/lib/dmenu_helpers.sh

mainMenu="[Shutdown]
[Reboot]
[Sleep]
[Terminate X]"

action=$(menu "Option: " "$mainMenu")
[ -z "$action" ] && exit

case "$action" in
    '[Shutdown]')
        sudo systemctl poweroff
    ;;
    '[Reboot]')
        sudo systemctl reboot
    ;;
    '[Sleep]')
        sudo systemctl suspend
    ;;
    '[Terminate X]')
        killall X
    ;;
esac
