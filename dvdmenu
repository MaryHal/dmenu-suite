#!/bin/bash

source $HOME/bin/menu/lib/menu_helpers.sh

mainMenu="[Chapter]
[DvdNav]
[Nav+MouseMovement]"

action=$(menu "Option: " "$mainMenu")
case "$action" in
    *'Chapter'*)
        chapter=`menu "Chapter #:"`
        $(mplayer dvd://$chapter)
    ;;
    *'DvdNav'*)
        $(mplayer dvdnav://)
    ;;
    *'Nav+MouseMovement'*)
        $(mplayer -mouse-movements dvdnav://)
    ;;
esac

